<%- include('partials/header'); -%>
<h1>Compose</h1>
<form action="/compose" method="POST">
    <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control" name="postTitle">
    </div>
    <div class="form-group">
        <label>Post</label>
        <textarea name="postContent" rows="5" cols="40" class="form-control"></textarea>
    </div>

    <button type="submit" name="postButton" class="btn btn-primary">Publish</button>
</form>


<%- include('partials/footer'); -%>